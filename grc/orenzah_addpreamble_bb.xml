<?xml version="1.0"?>
<block>
  <name>Add Preamble</name>
  <key>orenzah_addpreamble_bb</key>
  <category>[orenzah]</category>
  <import>import orenzah</import>
  <make>orenzah.addpreamble_bb($packet_len, $preamble_len)</make>
  <!-- Make one 'param' node for every Parameter you want settable from the GUI.
       Sub-nodes:
       * name
       * key (makes the value accessible as $keyname, e.g. in the make node)
       * type -->
  <param>
    <name>Packet Length</name>
    <key>packet_len</key>
    <type>int</type>
  </param>
   <param>
    <name>Preamble Length</name>
    <key>preamble_len</key>
    <type>int</type>
  </param>   

  <!-- Make one 'sink' node per input. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <sink>
    <name>in</name>
    <type>byte</type>
  </sink>

  <!-- Make one 'source' node per output. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <source>
    <name>out</name>
    <type>byte</type>
  </source>
</block>
